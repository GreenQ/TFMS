<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#fff2f2f2" />
                </shape>
            </item>
            <item android:bottom="0dp" android:right="0dp">
                <shape>
                    <gradient android:angle="270"

                    android:endColor="#ff51d785" android:startColor="#FF51D785" />


                    <stroke android:width="1dp" android:color="#FFB6C9E2" />
                    <corners android:topRightRadius="10dp" android:bottomRightRadius="10dp"  />


                </shape>
            </item>
        </layer-list>
    </item>

</selector>