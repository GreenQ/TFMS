<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="100dp" />
                    <solid android:color="#ffdcdcdc" />
                </shape>
            </item>
            <item android:bottom="0dp" android:right="0dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#8db0d3" android:startColor="#8db0d3" />
                    <stroke android:width="1dp" android:color="#ffe2e2e2" />
                    <corners android:topLeftRadius="10dp" android:bottomLeftRadius="10dp"/>

                </shape>
            </item>
        </layer-list>
    </item>

</selector>