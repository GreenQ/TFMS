<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.5"></RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="210dp"
        android:background="@drawable/bestbuy"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shadow"
            android:id="@+id/relativeLayout">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ежедневный бонус"
                android:textSize="17sp"
                android:background="#00FFFFFF"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/textView8" />


        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Закрыть"
            android:textColor="#FFFFFFFF"
            android:id="@+id/btnClose"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shadow2"/>

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:background="@drawable/btncon"
            android:id="@+id/btnOpenLetter"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="День 1"
                android:layout_marginLeft="5dp"
                android:background="#00FFFFFF"
                android:textColor="#ffffffff"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:id="@+id/textViewDay"
                />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/day"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="10"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#ffffffff"
                    android:textSize="40sp"
                    android:background="#00FFFFFF"
                    android:id="@+id/textViewCoins"
                    />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="#343245"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView6" />
            </RelativeLayout>


        </RelativeLayout>







        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true">

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:text="Заходите чаще - получайте больше монет"
            android:textSize="10sp"
            android:textColor="#ffffffff"
            android:layout_above="@+id/btnClose"
            android:background="#00FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</RelativeLayout>