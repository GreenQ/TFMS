<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.7"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/net"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#fffdfbff"
                android:textSize="30sp"
                android:background="#00FFFFFF"
                android:text="Вы проиграли"/>

            </RelativeLayout>



        <ImageView
            android:layout_below="@+id/net"
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/dikaprio"
            android:background="@drawable/dikaprio"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dikaprio"
            android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/per"
            android:layout_marginTop="10dp"
            android:background="@drawable/restart"
            android:layout_alignParentRight="true"
            >



            </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/exit"
            android:layout_alignParentLeft="true">


        </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>