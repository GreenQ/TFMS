<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="345dp"
    android:theme="@style/AppThemeDialog"
    >



    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="345dp"
        android:background="@drawable/bestbuy"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shadow"
            android:id="@+id/relativeLayout"
            android:gravity="center">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/5"
        android:background="#00FFFFFF"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:id="@+id/txtTickets" />

    </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="45dp"
                    android:background="@drawable/bilet"/>

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 : 49"
                    android:background="#00FFFFFF"
                    android:textSize="25sp"
                    android:layout_marginLeft="90dp"
                    android:textColor="#ffffff"
                    android:id="@+id/txtTime" />

                </RelativeLayout>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ffececec"
                android:text="Билеты закончились, вам нужно подождать пока они восполняться либо купить за монеты."
                />
            </RelativeLayout>


<RelativeLayout
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_below="@+id/text"
    android:id="@+id/rltvTicket1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:background="@drawable/buy_bilet">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/tik"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:text="1"/>

        <ImageView
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/kasa"/>

        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:text="="/>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="12dp"
            android:text="10"/>

        <ImageView
            android:layout_marginLeft="55dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/coins"/>

        </RelativeLayout>



    </RelativeLayout>



        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/rltvTicket1"
            android:id="@+id/rltvTicket2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/buy_bilet">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/tik2"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    android:text="2"/>

                <ImageView
                    android:layout_marginLeft="35dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/kasa"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:text="="/>

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="12dp"
                    android:text="20"/>

                <ImageView
                    android:layout_marginLeft="55dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/coins"/>

            </RelativeLayout>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/rltvTicket2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/buy_bilet"
            android:id="@+id/rltvTicket5">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/tik5"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    android:text="5"/>

                <ImageView
                    android:layout_marginLeft="35dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/kasa"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:text="="/>

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="12dp"
                    android:text="50"/>

                <ImageView
                    android:layout_marginLeft="55dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/coins"/>

            </RelativeLayout>



        </RelativeLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shadow2"
            android:text="Закрыть"
            android:id="@+id/btnClose"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"

            android:layout_alignParentBottom="true"
            />



    </RelativeLayout>

</RelativeLayout>